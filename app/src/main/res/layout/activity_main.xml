<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.shoh.test.PhoneFormatter
        android:layout_margin="8dp"
        android:id="@+id/phone_formatter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:background_resource="@drawable/phone_input_bg"
        app:hasFlag="true"
        app:hint_color="#377A18"
        app:hint_text="this is some hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:mask="#####"
        app:placeholder_image="@drawable/ic_afg"
        app:text_color="#EB1818"
        app:text_size="15" />


</androidx.constraintlayout.widget.ConstraintLayout>